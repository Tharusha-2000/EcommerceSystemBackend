{
  "Routes": [

    // Product Web API
    {
      "UpstreamPathTemplate": "/api/Product",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Update" ],

      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8000
        }
      ],
      "DownstreamPathTemplate": "/api/Product",
      // Rate limit options
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 3,
        "PeriodTimespan": 10
      },
      // Data caching options
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    },
    {
      "UpstreamPathTemplate": "/api/Product/{productId}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8000
        }
      ],
      "DownstreamPathTemplate": "/api/Product/{productId}",
      // Rate limit options
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 3,
        "PeriodTimespan": 10
      },
      // Data caching options
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl" : "https://localhost:5000"
  }
}